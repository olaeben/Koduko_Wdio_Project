pipeline {
    agent any

    environment {
        NODE_VERSION = '18.7.0' 
        PATH = "/Users/waleibitoye/.nvm/versions/node/v18.7.0/bin:$PATH"
    }

    tools {
        nodejs NODE_VERSION
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/olaeben/Koduko_Wdio_Project.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Start iOS Simulator') {
            steps {
                script {
                    sh '''
                    echo "Starting iOS simulator"
                    xcrun simctl boot "iPhone 15 Plus"
                    open -a Simulator
                    '''
                }
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npx wdio run wdio.iOS.conf.js'
            }
        }

        stage('Generate Allure Report') {
            steps {
                sh 'allure generate allure-results --clean -o allure-report'
            }
        }

        stage('Publish Allure Report') {
            steps {
                allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'allure-results']]
                ])
            }
        }
    }

    post {
        always {
            sh 'xcrun simctl shutdown all'  
        }
    }
}
